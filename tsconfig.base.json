{
  "compileOnSave": false,
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bella/aws": ["libs/backend/aws/src/index.ts"],
      "@bella/config": ["libs/backend/config/src/index.ts"],
      "@bella/configuration": ["libs/backend/config/src/lib/configuration.ts"],
      "@bella/core": ["libs/core/src/index.ts"],
      "@bella/db": ["libs/backend/database/src/index.ts"],
      "@bella/dto": ["libs/shared/src/dto/index.ts"],
      "@bella/enums": ["libs/shared/src/enums/index.ts"],
      "@bella/schema": ["libs/shared/src/schema/index.ts"],
      "@bella/utils": ["libs/shared/src/utils/index.ts"],
      "@bella/types": ["libs/shared/src/types/index.ts"],
      "@bella/data": ["libs/shared/src/data/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
